<idea-plugin require-restart="true">
  <id>testlinker2-rider</id>
  <name>Test Linker 2</name>
  <version>_PLACEHOLDER_</version>
  <vendor url="https://github.com/vladyslav-burylov/resharper-testlinker2">Matthias Koc; Vladyslav Burylov</vendor>
  <idea-version since-build="_PLACEHOLDER_" until-build="_PLACEHOLDER_" />
  <depends>com.intellij.modules.rider</depends>

  <actions>
    <action id="GotoLinkedTypes2" class="com.jetbrains.rider.plugins.testlinker2.GotoLinkedTypes2Action"
            text="Goto Linked Types (Test/Production)" description="">
      <keyboard-shortcut keymap="Visual Studio" first-keystroke="shift control I"/>
      <keyboard-shortcut keymap="Visual Studio OSX" first-keystroke="shift meta I"/>
    </action>
  </actions>

  <description>
<![CDATA[
<p>Semantically linking production and test code. This is fork of TestLinker plugin.</p>
]]>
  </description>

</idea-plugin>
